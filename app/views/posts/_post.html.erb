<div id="<%= dom_id post %>">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Body:</strong>
    <%= post.body %>
  </p>
  <div>
    <% unless post.id.nil? %>
      <%= button_to "Edit this post", edit_post_path(post),  data:{turbo_frame: "modal"} , method: :get%>
      <%# edit 템플릿에 modal 태그가  있기를 기대함 %>
      <%#= link_to "Back to posts", posts_path %>
      <%= button_to "Destroy this post", post, method: :delete %>
    <% end %>
  
</div>
</div>
